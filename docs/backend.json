
{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Representa um usuário do ChessDuet.",
      "properties": {
        "id": {
          "type": "string",
          "description": "ID único do usuário (UID do Firebase).",
          "format": "uuid"
        },
        "username": {
          "type": "string",
          "description": "Nome de exibição."
        },
        "email": {
          "type": "string",
          "description": "E-mail do usuário.",
          "format": "email"
        }
      },
      "required": [
        "id",
        "username",
        "email"
      ]
    },
    "Game": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Game",
      "type": "object",
      "description": "Representa uma partida de xadrez.",
      "properties": {
        "id": {
          "type": "string",
          "description": "ID único da partida."
        },
        "fen": {
          "type": "string",
          "description": "Estado do tabuleiro em notação FEN."
        },
        "turn": {
          "type": "string",
          "description": "Vez de quem jogar ('w' ou 'b')."
        },
        "player1Id": {
          "type": "string",
          "description": "UID do jogador das brancas."
        },
        "player2Id": {
          "type": "string",
          "description": "UID do jogador das pretas (nulo se aguardando)."
        },
        "mode": {
          "type": "string",
          "description": "Modo de jogo: 'ai', 'pvp' ou 'learning'."
        },
        "lastUpdated": {
          "type": "string",
          "description": "Data da última jogada.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "fen",
        "player1Id"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "google",
      "github",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/backend/entities/User"
          },
          "description": "Perfis de usuário."
        }
      },
      {
        "path": "/games/{gameId}",
        "definition": {
          "entityName": "Game",
          "schema": {
            "$ref": "#/backend/entities/Game"
          },
          "description": "Dados das partidas em tempo real."
        }
      }
    ]
  }
}
