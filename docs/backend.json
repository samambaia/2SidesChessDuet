
{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a ChessDuet user.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique user ID (Firebase UID).",
          "format": "uuid"
        },
        "username": {
          "type": "string",
          "description": "Display name."
        },
        "email": {
          "type": "string",
          "description": "User email.",
          "format": "email"
        }
      },
      "required": [
        "id",
        "username",
        "email"
      ]
    },
    "Game": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Game",
      "type": "object",
      "description": "Represents a chess match.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique match ID."
        },
        "fen": {
          "type": "string",
          "description": "Board state in FEN notation."
        },
        "turn": {
          "type": "string",
          "description": "Current player's turn ('w' or 'b')."
        },
        "player1Id": {
          "type": "string",
          "description": "UID of the player with white pieces."
        },
        "player2Id": {
          "type": "string",
          "description": "UID of the player with black pieces (null if waiting)."
        },
        "mode": {
          "type": "string",
          "description": "Game mode: 'ai', 'pvp', or 'learning'."
        },
        "lastUpdated": {
          "type": "string",
          "description": "Date of the last move.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "fen",
        "player1Id"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "google",
      "github",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/backend/entities/User"
          },
          "description": "User profiles."
        }
      },
      {
        "path": "/games/{gameId}",
        "definition": {
          "entityName": "Game",
          "schema": {
            "$ref": "#/backend/entities/Game"
          },
          "description": "Real-time match data."
        }
      }
    ]
  }
}
