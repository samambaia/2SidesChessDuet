
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    match /users/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    match /games/{gameId} {
      // Permite que qualquer usuário logado (incluindo anônimos por link) jogue e atualize o estado
      allow read, create, update: if isSignedIn();
      allow delete: if isSignedIn() && resource.data.player1Id == request.auth.uid;
    }
  }
}
